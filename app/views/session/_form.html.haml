.row
  .large-5.columns
    = form_tag '/login', :remote => true do
      = label_tag :email
      = text_field_tag :email, nil, :autofocus => true
      = label_tag :password
      = password_field_tag :password
      = submit_tag 'Login', :class => 'button radius'
      = button_to_function('Cancel', 'cancel_login_form()',:class=>'button')
  .large-7.columns
